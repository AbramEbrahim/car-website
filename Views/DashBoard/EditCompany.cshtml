@model car_web.Models.Combany
@{
    Layout = "_DashBoard";
}
<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Edit Company</span>
    </div>

    <div>
        <form class="row" method="post" asp-action="EditCompany" enctype="multipart/form-data">
            <input type="text" asp-for="@Model.Id" value="@Model.Id" class="d-none">



            <input asp-for="@Model.Id" type="number" hidden disabled />
            <div>

                <label asp-for="@Model.Name" class="form-label">Company Name</label>
                <input type="text"
                       asp-for="@Model.Name"
                       value="@Model.Name"
                       class="form-control"
                       placeholder="" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            

            <br /><br />
            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-primary">Submit</button>

            </div>
        </form>

    </div>
</div>