@model Contact
@{
    Layout = "_CarLayout";
}


<style>


    .contact-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        text-align: center;
    }

    h1 {
        margin-bottom: 20px;
    }

    form {
        display: flex;
        flex-direction: column;
    }

    label {
        margin-bottom: 5px;
        font-weight: bold;
    }

    input, textarea {
        margin-bottom: 15px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    button {
        padding: 10px;
        border: none;
        border-radius: 4px;
        background-color: #28a745;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
    }

        button:hover {
            background-color: #218838;
        }

</style>

<section id="home" class="welcome-hero">
    <img src="~/assets/images/welcome-hero/welcome-banner.jpg" />
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="model-search-content">
                    <div class="row">
                        <div class="col-md-offset-1 col-md-10 col-sm-12">
                            <h1>Contact Us</h1>


                            <form method="post" action="Contact">
                                <label for="name">Name</label>
                                <input type="text" id="name" asp-for="Name" placeholder="Name" required>

                                <label asp-for="Email" placeholder="Email">Email</label>
                                <input type="email" id="email" name="email" required>

                                <label asp-for="Subject" placeholder="Subject">Subject</label>
                                <input type="subject" id="subject" name="subject">

                                <label for="message">Message</label>
                                <textarea id="message" asp-for="Message" placeholder="Message" rows="5" required></textarea>

                                <button type="submit">send message</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

