@model car_web.Models.Combany

@{
    Layout = "_DashBoard";
}


<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Adding Company</span>
    </div>

    <div>
        <form class="row" method="post" asp-action="AddCompany" enctype="multipart/form-data">
            <input type="text" asp-for="@Model.Id" class="d-none">


            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Company Name</label>
                <input type="text"
                       asp-for="@Model.Name"
                       class="form-control"
                       placeholder="" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

           
            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-primary">Submit</button>

            </div>
        </form>

    </div>
</div>